<%= render 'users/header' %>
<!-- <a href="/users/<%#=@user.id%>/edit">Edit</a> -->


<div class="row">

  <div class="col-md-offset-4 col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading center">
        <img alt="Img 0872" src="<%= @user.prof_img %>" class="img-nice-square" style>
      </div>
    </div>
  </div>

  
    <div class="col-md-offset-4 col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading center">
          <img alt="Img 0872" src="<%= @user.apt_img %>" class="img-nice-square">
        </div>
          <div class="caption">
            <p>
              <h2><%= @user.first_name %>, <%= @user.age %></h2>
              <!-- ul>
                <li><%#= @user.age %></li>
              </ul> -->
            </p> 
          <% if @user.host? %> 
            <p>
              <h4><%= @user.apartment.hood.name %></h4>
              <ul>
                <li>Street: <%= @user.apartment.no_number_address %></li>
                <li>Bedroom count: <%= @user.apartment.br_count %></li>
                <li>Price: <%= @user.apartment.dollarize_price %>/month</li>
              </ul>
            </p>
          <% end %>
          <% if @user.id != session[:user_id] %>
            <p>
              <%= button_to "/users/#{@user.id}/likes", :method => "post", :params => {:dislikee_id => @user.id}, class: "btn btn-danger decision-btn" do %>
                    <i class="fa fa-close"></i>
              <% end %>

              <%= button_to "/users/#{@user.id}/likes", :method => "post", :params => {:likee_id => @user.id}, class: "btn btn-default decision-btn" do %>
                <i class="fa fa-heart"></i>
              <% end %>
              <div class="clearfix"></div>
            </p>
          <% end %>
          </div>
        </div>
      </div>
  </div>

